<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashcardGamification.Views.DeckEditPage"
             xmlns:viewmodels="clr-namespace:FlashcardGamification.ViewModel"
             x:DataType="viewmodels:DeckEditViewModel"
             Title="{Binding Title}">
	<VerticalStackLayout Padding="20" Spacing="15">

		<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

		<Label Text="Deck Name:" FontAttributes="Bold"/>
		<Entry Text="{Binding DeckName}" Placeholder="Enter deck name"/>

		<HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
			<Button Text="Save" Command="{Binding SaveDeckCommand}" IsEnabled="{Binding IsNotBusy}"/>
			<Button Text="Cancel" Command="{Binding CancelCommand}" IsEnabled="{Binding IsNotBusy}"/>
		</HorizontalStackLayout>

	</VerticalStackLayout>
</ContentPage>

    