<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashcardGamification.Views.CardEditPage"
             xmlns:viewmodels="clr-namespace:FlashcardGamification.ViewModel"
             x:DataType="viewmodels:CardEditViewModel"
             Title="{Binding Title}">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="10">

			<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

			<Label Text="Card Front (Question/Prompt):" FontAttributes="Bold"/>
			<Editor Text="{Binding CardFront}" Placeholder="Enter the front text" AutoSize="TextChanges" HeightRequest="100"/>

			<Label Text="Card Back (Answer/Info):" FontAttributes="Bold"/>
			<Editor Text="{Binding CardBack}" Placeholder="Enter the back text" AutoSize="TextChanges" HeightRequest="100"/>

			<HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="20,0,0,0">
				<Button Text="Save Card" Command="{Binding SaveCardCommand}" IsEnabled="{Binding IsNotBusy}"/>
				<Button Text="Cancel" Command="{Binding CancelCommand}" IsEnabled="{Binding IsNotBusy}"/>
			</HorizontalStackLayout>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

    