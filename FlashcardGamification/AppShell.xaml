<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FlashcardGamification.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlashcardGamification"
    xmlns:views="clr-namespace:FlashcardGamification.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="FlashcardGamification">

    <TabBar>
        <Tab Title="Stats">
            <ShellContent
            Title="Stats"
            ContentTemplate="{DataTemplate views:StatsPage}"
            Icon="dotnet_bot.png"
            Route="StatsPage" />
        </Tab>
        <Tab Title="Decks">
            <ShellContent
            Title="Decks"
            ContentTemplate="{DataTemplate views:DeckListPage}"
            Icon="dotnet_bot.png" 
            Route="DeckListPage" />
         </Tab>
    </TabBar>

</Shell>
